# =============================================================================
# MyApp DevOps - Environment Configuration Template
# =============================================================================
# 
# This file contains all environment variables needed for the application.
# Copy this file to .env and update the values for your environment.
# 
# SECURITY WARNING: Never commit .env files to version control!
# =============================================================================

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Application name and version
APP_NAME=MyApp
APP_VERSION=1.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (PostgreSQL)
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/app_db

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret Key (REQUIRED - Generate a strong random key for production!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Token Expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password hashing rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed CORS origins (comma-separated)
# For development: http://localhost:5173
# For production: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# PRODUCTION SECURITY SETTINGS
# =============================================================================

# Allowed hosts for TrustedHostMiddleware (comma-separated)
# Only used in production environment
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Force HTTPS redirect in production
FORCE_HTTPS=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (relative to application root)
LOG_FILE=logs/app.log

# Log rotation settings
LOG_ROTATION=10 MB
LOG_RETENTION=7 days

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Enable Prometheus metrics endpoint
ENABLE_METRICS=true

# Metrics endpoint path
METRICS_PATH=/metrics

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable FastAPI docs in development
ENABLE_DOCS=true

# Enable debug mode (development only)
DEBUG=false

# =============================================================================
# DATABASE MIGRATION SETTINGS
# =============================================================================

# Auto-run migrations on startup
AUTO_MIGRATE=true

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================

# Session timeout (in seconds)
SESSION_TIMEOUT=3600

# =============================================================================
# RATE LIMITING (Future enhancement)
# =============================================================================

# Enable rate limiting
ENABLE_RATE_LIMITING=false

# Rate limit requests per minute per IP
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# BACKUP CONFIGURATION (Future enhancement)
# =============================================================================

# Enable automatic backups
ENABLE_BACKUPS=false

# Backup retention days
BACKUP_RETENTION_DAYS=30

# =============================================================================
# NOTIFICATION SETTINGS (Future enhancement)
# =============================================================================

# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=false

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# CLOUD DEPLOYMENT SETTINGS
# =============================================================================

# Cloud provider (gcp, aws, azure)
CLOUD_PROVIDER=gcp

# Region for cloud deployment
CLOUD_REGION=europe-central2

# Project ID (for GCP)
GCP_PROJECT_ID=your-project-id

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================

# Docker image tag
DOCKER_IMAGE_TAG=latest

# Container registry
CONTAINER_REGISTRY=gcr.io

# =============================================================================
# CI/CD SETTINGS
# =============================================================================

# GitHub repository
GITHUB_REPO=your-username/myapp-devops

# Branch for production deployment
PRODUCTION_BRANCH=main

# =============================================================================
# END OF CONFIGURATION
# =============================================================================
#
# Remember to:
# 1. Generate a strong JWT_SECRET for production
# 2. Update CORS_ORIGINS for your frontend domains
# 3. Set proper ALLOWED_HOSTS for production
# 4. Enable FORCE_HTTPS in production
# 5. Use environment-specific database URLs
# 6. Set DEBUG=false in production
# ============================================================================= 